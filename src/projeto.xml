<?xml version="1.0" ?>
<project name="Simple" width="512" height="512">
	<assets>
		<scenes>
			<scene name="Al"  param="USE_ADJACENCY UNITIZE SWAP_YZ" >
				<file name="models/Teapot.3ds"/>
			</scene>

		</scenes>
		<lights>
    	    <light name="sun">
    	        <DIRECTION x=-1 y=-1 z=-1/>
    	    </light>
    	</lights>
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
				<ORIGIN  x="0" y="0" />
				<SIZE width=".33"  height="1" />
			</viewport>
			<viewport name="SmallViewport1" >
				<ORIGIN  x="0.33" y="0" />
				<SIZE width=".33"  height="1" />
				<CLEAR_COLOR  r="0.0" g="0.0" b="0.2" />
			</viewport>
			
			<viewport name="SmallViewport2" >
				<ORIGIN x=".66" y="0.33" />
				<SIZE width=".25"  height="0.33" />
				<CLEAR_COLOR  r="0.0" g="0.0" b="0.2" />
			</viewport>
			
			<viewport name="SmallViewport3" >
				<ORIGIN x=".75" y="0" />
				<SIZE width=".25"  height="0.33" />
				<CLEAR_COLOR  r="0.0" g="0.0" b="0.2" />
			</viewport>
		</viewports>

		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=0.1 FAR=100.0 />
				<POSITION x=0 y=0.0 z=7.5 />
				<VIEW x=0.0 y=0.0 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
		</cameras>
		
		<materialLibs>
			<materialLib filename="projeto.mlib"/>
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<!--pass class="default" name="pass1" >
				<scenes>
					<scene name="Al" />
				</scenes>
				<camera name="MainCamera" />

			</pass-->


			<pass class="default" name="pass">
				<scenes>
					<scene name="Al" />
				</scenes>
				<camera name="MainCamera" />
				<materialMaps>
					<map fromMaterial="*" toLibrary="Geometry With Adjacency" toMaterial="showContours" />
				</materialMaps>
			</pass>
			<pass class="default" name="pass2">
				<DEPTH_CLEAR value=false />
				<COLOR_CLEAR value=false />
                <DEPTH_FUNC value="LEQUAL" />
				<scenes>
					<scene name="Al" />
				</scenes>
				<camera name="MainCamera" />
				<!--injectionMaps>
					<map toMaterial="*" > 
                        <shader fromMaterial="toon" 
                                fromLibrary="Geometry With Adjacency" 
                         />
                    </map>
				</injectionMaps-->


				<materialMaps>
					<map fromMaterial="*" toMaterial="toon" toLibrary="Geometry With Adjacency" />
				</materialMaps>

				<lights>
                    <light name="sun" />
                </lights>
			</pass>



			
		</pipeline>
	</pipelines>
</project>
